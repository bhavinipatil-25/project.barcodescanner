<mvc:View
    height="100%"
    controllerName="project.barcodescanner.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout">

    <Page showHeader="false" enableScrolling="true" class="sapUiContentPadding"
        showNavButton="false">
        <content>
            <l:VerticalLayout class="sapUiContentPadding" width="100%">
                <Button icon="sap-icon://bar-code" text="Scan" press="onScan" />
                <Label text="Material" />
                <Input id="materialNumber" value="" width="30%" />
            </l:VerticalLayout>
            <Table id="idProductsTable"  growing="true"
                growingThreshold="10" paste="onPaste" visible="false"  mode="SingleSelectMaster">
                <headerToolbar>
                    <OverflowToolbar id="otbSubheader">
                        <Title text="Scanned Items" level="H2" />
                        <ToolbarSpacer />
                        <Button id="editButton" text="Edit" type="Transparent"
                            press="onEdit" />
                        <Button id="saveButton" text="Post" type="Transparent"
                            press="onPost" visible="false" />
                        <Button id="cancelButton" text="Cancel" type="Transparent"
                            press="onCancel" visible="false" />
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column width="12em">
                        <Text text="Plant" />
                    </Column>
                    <Column minScreenWidth="Tablet" demandPopin="true">
                        <Text text="Reservation Number" />
                    </Column>
                    <Column minScreenWidth="Tablet" demandPopin="true">
                        <Text text="Reservation Line Items" />
                    </Column>
                    <Column minScreenWidth="Tablet" demandPopin="true">
                        <Text text="Material Code" />
                    </Column>
                    <Column minScreenWidth="Tablet" demandPopin="true">
                        <Text text="Base UOM" />
                    </Column>
                    <Column minScreenWidth="Tablet" demandPopin="true">
                        <Text text="Required Quantity" />
                    </Column>
                    <Column minScreenWidth="Tablet" demandPopin="true">
                        <Text text="Quantity withdrawn" />
                    </Column>
                    <Column minScreenWidth="Tablet" demandPopin="true">
                        <Text text="Storage Location" />
                    </Column>
                    <Column minScreenWidth="Tablet" demandPopin="true">
                        <Text text="Batch" />
                    </Column>

                </columns>
                <items>
                    <ColumnListItem vAlign="Middle">
                        <cells>
                            <ObjectIdentifier text="{productModel>WERKS}" />
                            <Text text="{productModel>RSNUM}" />
                            <Text text="{productModel>RSPOS}" />
                            <Text text="{productModel>MATNR}" />
                            <Text text="{productModel>MEINS}" />
                            <Text text="{productModel>BDMNG}" />
                            <Text text="{productModel>ENMNG}" />
                            <Text text="{productModel>LGORT}" />
                            <Text text="{productModel>CHARG}" />

                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>